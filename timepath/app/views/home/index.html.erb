<div class='header'>
    <div class='header-content'>
        创建您的个人时间轴
    </div>
    
</div>
<div class='main'>
    <div class='blur-background-wrapper'>
    <div class='blur-background'>
      <div class='center-content'>
          <div class='board'>
              <!--register form-->

                <div class='register-board-shadow'>
                  <div class='register-board'>
                  <div class='register-board-form'>
                     <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <div class='form-field'>
                      <div> <%= f.email_field :email, :autofocus => true, :placeholder=>"电子邮件" %></div>
                         <div id="mail-message" class='form-message'></div> 
                        <div><%= f.password_field :password, :placeholder=>"密码" %></div>
                          <div id="password-message" class='form-message'></div>
                        <div><%= f.password_field :password_confirmation, :placeholder=>"确认" %></div>
                          <div id="confirm-message" class='form-message'></div>
                        <div><%= f.submit "注册" %></div>
                   </div>
                    
                  <% end %>
                  </div>
                  </div>
              </div>
              <!--login form-->
              <div class='login-board-shadow'>
                  <div class='login-board'>
                    <div class='login-board-form'>
                       <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                        <div class='form-field'>
                            <div><%= f.email_field :email, :autofocus => true, :placeholder=>'电子邮件' %></div>
                            <div ><%= f.password_field :password, :placeholder=>'密码'%></div>
                            <% if devise_mapping.rememberable? -%>
                              <div class='checkbox-wrapper'><%= f.check_box :remember_me %> <%= f.label :记住登录状态  %></div>
                            <% end -%>

                            <div><%= f.submit "登录" %></div>
                        </div>

                      <% end %> 
                    </div>
                  </div>
              </div>
              <!--end form-->
          </div>


  
        <div class='login-button'>
            <div class='or'>或者</div>
            <button id='login-button'>登录</button>
        </div>
      </div>
 
        
    </div>
    </div>
</div>

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>